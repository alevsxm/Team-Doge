
<img class="pic-url" <%= image_tag(@resovision.pic_url) %><br>
<div class="name">
  <h4 class="name"><%= @resovision.first_name %> <%= @resovision.last_name %></h4>
<div class="profile-heading"
  <li class="location"><%= @resovision.location %></li>
  <li class="industry"><%= @resovision.industry %></li>
  <li class="headline"><%= @resovision.headline %></li>
  <li class="summary"><%= @resovision.summary %></li>
  <div class= 'ziglets'>
    <button class='show-ziglet' id='<%= @resovision.last_name%><%= @resovision.first_name %>'>Ask <%= @resovision.first_name %> about it.</button>
  </div>
</div>

<hr> 
<% if @resovision.num_positions > 0 %>
  <div class="positions"> Positions:
    <hr> 
    <% @resovision.positions.each do |position| %>
        <p class="position">
          <h6 class="company"><%= position.company_name %></h6>
          <h6 class="title"><%= position.title %></h6>
          <ul class="summary"><%= position.summary %></ul>
          <ul class="is-current">Currently working here? <%= position.is_current %></ul>
          <ul class="dates"> <%= position.start_month %>/<%= position.start_year %> - <%= position.end_month %>/<%= position.end_year %></ul>
          <div class= 'ziglets'>
            <button class='show-ziglet'id='<%= position.company_name %><%= @resovision.last_name%>'>Ask <%= @resovision.first_name %> about it.</button>
          </div>
        </p>
        <hr>
    <% end %>
  </div>
<% end %>

<% if @resovision.num_educations > 0 %>
  <div class="educations"> Education:
    <hr> 
    <% @resovision.educations.each do |education| %>
        <p class="education">
          <h6 class="school-name"><%= education.school_name %></h6>
          <h6 class="degree"><%= education.degree %></h6>
          <ul class="field-of-study">Field of study: <%= education.field_of_study %></ul>
          <ul class="start-year"><%= education.start_year %> - <%= education.end_year %></ul>
          <div class= 'ziglets'>
            <button class='show-ziglet'id='<%= education.school_name %><%= @resovision.last_name%>'>Ask <%= @resovision.first_name %> about it.</button>
          </div>
        </p>
        <hr>
    <% end %>
  </div>
<% end %> 
